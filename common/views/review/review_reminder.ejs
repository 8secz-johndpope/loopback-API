<html>

<head>
    <% for (let i=0; i<font_family_name_link.length; i++) { %>
        <link href='https://fonts.googleapis.com/css?family=<%= font_family_name_link[i] %>' rel='stylesheet' type='text/css'>
        <% } %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    * {
        font-family: <%= font_family_name_name %> !important;
      }
    a {
      text-decoration:none;
    }
  </style>
</head>
<body>
  <div style="
  margin: 0 auto;
  max-width: 600px;
  padding: 0 20px;
  font-family: <%= font_family_name_name %>;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.5;
  letter-spacing: normal;
  color: #363436;
    ">
    <div>
      <div class="header" style="height: 70px;display: table;width: 100%;font-size: 14px;">
        <div style="height: 30px;display: table-cell;vertical-align: middle;">
          <img src="https://theasia.imgix.net/logo/theasia.png">
        </div>
      </div>
      <div class="content" style="font-size: 14px;">
        <div class="img-container">
          <img src="http://theasia.imgix.net/emails/v2/reviewRequestImg.PNG" style="object-fit: cover;
          width: 100%;
          height: 200px;" />
        </div>
        <div class="welcome-content" style="margin-top: 46px">
          <span style="color:black">
            <b>
              <%= hey %>&nbsp;<%= name %><%= hey_after %></b>
          </span>
          <p><%= text1 %></p>
          <p style="margin: 30px 0;">
            <%= text2 %>
          </p>
        </div>
        <div  class="action-content" style="margin: 23px 0">
          <div style="padding: 10px;  border-radius: 3px;
            background-image: linear-gradient(to right, #ff8733, #ffc32c);
            outline: none;
            border: none;display:inline-block;">
            <a href="<%= url %>" style="padding: 10px;
            border-radius: 3px;
            background-image: linear-gradient(to right, #ff8733, #ffc32c);
            outline: none;
            border: none;">
              <span style=" padding: 30px;
            font-family: <%= font_family_name_name %>;
            font-size: 16px;
            font-weight: bold;
            font-style: normal;
            font-stretch: normal;
            line-height: normal;
            letter-spacing: normal;
            text-align: center;
            color: #ffffff;"><%= feedback_now %></span>
            </a>
            </div>
        </div>
        <div class="text-content">
          <p style="margin: 30px 0;"><%= text3 %></p>
          <p style="margin: 30px 0;">
            <span><%= regards %></span>
            <br/>
            <b style="color:#4cac87"><a style="font-weight: bold; color: #4cac87;text-decoration: none;" target="blank" href="#">TheAsia.com</a></b>
          </p>
          <p>
            <span><%= newsletter %></span>
          </p>
          <p><a href="<%= url %>" style="padding: 10px;
            border-radius: 3px;
            background-image: linear-gradient(to right, #ff8733, #ffc32c);
            outline: none;
            border: none;">
            <span style=" padding: 30px;
            font-family: <%= font_family_name_name %>;
            font-size: 16px;
            font-weight: bold;
            font-style: normal;
            font-stretch: normal;
            line-height: normal;
            letter-spacing: normal;
            text-align: center;
            color: #ffffff;"><%= subscribe_button %></span>
          </a></p>
        </div>

        <%- include('../partial/footer.ejs') %>
      </div>
    </div>
  </div>




</body>

</html>
